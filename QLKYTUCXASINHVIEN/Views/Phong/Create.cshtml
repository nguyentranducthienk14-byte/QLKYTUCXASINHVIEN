@model QLKYTUCXASINHVIEN.Models.Phong

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">THÊM PHÒNG MỚI</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Mã Phòng (Ví dụ: A101)</label>
                        @Html.EditorFor(model => model.MaPhong, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="fw-bold">Số Phòng</label>
                        @Html.EditorFor(model => model.SoPhong, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="fw-bold">Tòa Nhà</label>
                        @Html.DropDownListFor(model => model.ToAnha, new SelectList(new[] { "A", "B", "C" }), "-- Chọn tòa --", new { @class = "form-select" })
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="fw-bold">Sức Chứa (Người)</label>
                        @Html.EditorFor(model => model.SucChua, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="fw-bold">Giá Thuê (VND)</label>
                        @Html.EditorFor(model => model.TinhTrang, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success px-4">Lưu lại</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy bỏ</a>
                </div>
            }
        </div>
    </div>
</div>