@model QLKYTUCXASINHVIEN.Models.SinhVien
@{ ViewBag.Title = "Thêm sinh viên"; }

<h2>Thêm sinh viên mới</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @* Sửa true thành false để hiện tất cả các lỗi dữ liệu *@
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            <label class="fw-bold">Mã Sinh Viên</label>
            @Html.EditorFor(model => model.MaSV, new { htmlAttributes = new { @class = "form-control", placeholder = "VD: SV001" } })
            @Html.ValidationMessageFor(model => model.MaSV, "", new { @class = "text-danger" })
        </div>

        @*<div class="form-group">
            <label>Mã Sinh Viên</label>
            @Html.EditorFor(model => model.MaSV, new { htmlAttributes = new { @class = "form-control" } })
        </div>*@
        <div class="form-group">
            <label>Họ Tên</label>
            @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="mt-3">
            <input type="submit" value="Lưu dữ liệu" class="btn btn-primary" />
            <a href="@Url.Action("Index")" class="btn btn-default">Hủy bỏ</a>
        </div>

    </div>
    }
