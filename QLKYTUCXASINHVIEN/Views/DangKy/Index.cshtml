@model IEnumerable<QLKYTUCXASINHVIEN.Models.DangKy>
@{
    ViewBag.Title = "Danh sách Đăng ký Nội trú";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    @* --- PHẦN TIÊU ĐỀ VÀ NÚT BẤM ĐÃ ĐƯỢC CHỈNH SỬA --- *@
    <div class="d-flex justify-content-between align-items-end mb-4">
        <div>
            <h2 class="text-primary fw-bold mb-1">Quản lý Đăng ký</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 bg-transparent p-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Quay Về Trang chủ</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Danh sách đăng ký</li>
                </ol>
            </nav>
        </div>
        <div>
            <a href="@Url.Action("Create")" class="btn btn-success shadow-sm px-4 rounded-pill">
                <i class="fas fa-plus me-2"></i>Thêm Đăng ký Mới
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Mã Đơn</th>
                        <th>Sinh Viên</th>
                        <th>Thông tin Phòng</th>
                        <th>Giá Thuê</th>
                        <th>Ngày Đăng Ký</th>
                        <th>Trạng Thái</th>
                        <th class="text-center">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-secondary">#@item.MaDangKy</td>
                            <td>
                                <div class="fw-bold">@item.SinhVien.HoTen</div>
                                <small class="text-muted">MSSV: @item.MaSV</small>
                            </td>
                            <td>
                                <div><i class="fas fa-door-open me-1 text-primary"></i> @item.Phong.SoPhong</div>
                                <small class="text-muted">Tòa: @item.Phong.ToAnha</small>
                            </td>
                            <td class="text-danger fw-bold">
                                @item.Phong.GiaThue.ToString("N0") <small>đ</small>
                            </td>
                            <td>@item.NgayDangKy.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.TrangThai == "Đã duyệt")
                                {
                                    <span class="badge bg-success-subtle text-success border border-success px-3 rounded-pill">Đã duyệt</span>
                                }
                                else if (item.TrangThai == "Chờ duyệt")
                                {
                                    <span class="badge bg-warning-subtle text-warning border border-warning px-3 rounded-pill">Chờ duyệt</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger-subtle text-danger border border-danger px-3 rounded-pill">Từ chối</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group shadow-sm">
                                    @* Nút Chỉnh sửa - Màu xanh dương (Primary) *@
                                    <a href="@Url.Action("Edit", new { id = item.MaDangKy })"
                                       class="btn btn-sm btn-outline-primary btn-hover-blue" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>

                                    @* Nút Xóa - Màu đỏ (Danger) *@
                                    <a href="@Url.Action("Delete", new { id = item.MaDangKy })"
                                       class="btn btn-sm btn-outline-danger"
                                       title="Xóa"
                                       onclick="return confirm('Bạn có thực sự muốn xóa đơn đăng ký #@item.MaDangKy không?')">
                                        <i class="fas fa-trash-alt"></i> Xóa
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>