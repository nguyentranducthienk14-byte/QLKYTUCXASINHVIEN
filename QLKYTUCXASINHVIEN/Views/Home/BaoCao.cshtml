@model IEnumerable<QLKYTUCXASINHVIEN.Models.DangKy>

@{
    ViewBag.Title = "Báo cáo – Thống kê";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-4">

    <!-- TIÊU ĐỀ -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold mb-0">📊 DASHBOARD QUẢN LÝ KÝ TÚC XÁ</h2>
        <a href="/Home/Index" class="btn btn-outline-secondary">
            ⬅ Quay về trang chủ
        </a>
    </div>

    <!-- THỐNG KÊ NHANH -->
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow-sm p-3 rounded-4">
                <h6 class="text-uppercase">Tổng sinh viên</h6>
                <h2 class="fw-bold">@ViewBag.TongSV</h2>
                <div class="text-end opacity-50">
                    <i class="fas fa-user-graduate fa-2x"></i>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-success text-white shadow-sm p-3 rounded-4">
                <h6 class="text-uppercase">Doanh thu</h6>
                <h2 class="fw-bold">
                    @String.Format("{0:N0}", ViewBag.DoanhThu) đ
                </h2>
                <div class="text-end opacity-50">
                    <i class="fas fa-coins fa-2x"></i>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-danger text-white shadow-sm p-3 rounded-4">
                <h6 class="text-uppercase">Tiền còn nợ</h6>
                <h2 class="fw-bold">
                    @String.Format("{0:N0}", ViewBag.TienNo) đ
                </h2>
                <div class="text-end opacity-50">
                    <i class="fas fa-hand-holding-usd fa-2x"></i>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-info text-white shadow-sm p-3 rounded-4">
                <h6 class="text-uppercase">Tỷ lệ lấp đầy</h6>
                <h2 class="fw-bold">@ViewBag.TiLe%</h2>
                <div class="progress mt-2" style="height: 8px;">
                    <div class="progress-bar bg-white"
                         style="width:@ViewBag.TiLe%">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- BẢNG ĐĂNG KÝ MỚI -->
    <div class="card mt-5 shadow border-0 rounded-4">
        <div class="card-header bg-dark text-white rounded-top-4">
            <h5 class="mb-0">📝 Đơn đăng ký mới nhất</h5>
        </div>

        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Tên sinh viên</th>
                        <th>Phòng</th>
                        <th>Ngày đăng ký</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                               <td>
                                   @if (item.SinhVien != null)
                                   {
                                       @item.SinhVien.HoTen @* Hiện tên thật thay vì dòng Proxy *@
                                   }
                                   else
                                   {
                                       <span class="text-danger">Không xác định</span>
                                   }
                               </td>
                                <td>@item.MaPhong</td>
                                <td>@item.NgayDangKy.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge bg-success">
                                        @item.TrangThai
                                    </span>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">
                                Chưa có đơn đăng ký nào
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
