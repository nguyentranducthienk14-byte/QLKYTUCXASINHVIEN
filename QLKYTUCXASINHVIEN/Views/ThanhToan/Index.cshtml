@model IEnumerable<QLKYTUCXASINHVIEN.Models.HoaDon>

@{
    ViewBag.Title = "Quản lý Thanh toán";
}

<style>
    .payment-container {
        background-color: #f4f7f6;
        padding: 2rem;
        border-radius: 20px;
    }

    .stat-card {
        border: none;
        border-radius: 15px;
        transition: 0.3s;
        color: white;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.1);
        }

    .bg-collected {
        background: linear-gradient(45deg, #2ecc71, #27ae60);
    }

    .bg-pending {
        background: linear-gradient(45deg, #e74c3c, #c0392b);
    }

    .table-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        padding: 1.5rem;
    }

    .badge-paid {
        background-color: #d4edda;
        color: #155724;
        padding: 8px 12px;
        border-radius: 10px;
    }

    .badge-unpaid {
        background-color: #f8d7da;
        color: #721c24;
        padding: 8px 12px;
        border-radius: 10px;
    }
    .btn-white {
        background: #fff;
        border: 1px solid #dee2e6;
        color: #495057;
        transition: all 0.2s;
    }

        .btn-white:hover {
            background: #f8f9fa;
            transform: translateX(-3px); /* Hiệu ứng đẩy về bên trái khi hover */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1) !important;
        }

    .gap-2 {
        gap: 0.5rem !important;
    }

    /* Style chung cho nút hành động */
    .btn-action {
        width: 35px;
        height: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        border: none;
        transition: all 0.3s ease;
        text-decoration: none;
        font-size: 0.9rem;
    }

        /* Hiệu ứng phóng to nhẹ khi di chuột */
        .btn-action:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 10px rgba(0,0,0,0.1);
            color: white !important;
        }

    /* Các bộ màu Soft đặc trưng */
    .btn-soft-primary {
        background-color: #e7f1ff;
        color: #0d6efd;
    }

        .btn-soft-primary:hover {
            background-color: #0d6efd;
        }

    .btn-soft-success {
        background-color: #e6fcf5;
        color: #0ca678;
    }

        .btn-soft-success:hover {
            background-color: #0ca678;
        }

    .btn-soft-warning {
        background-color: #fff4e6;
        color: #fd7e14;
    }

        .btn-soft-warning:hover {
            background-color: #fd7e14;
        }

    .btn-soft-danger {
        background-color: #fff5f5;
        color: #f03e3e;
    }

        .btn-soft-danger:hover {
            background-color: #f03e3e;
        }

    /* Khoảng cách giữa các nút */
    .gap-2 {
        gap: 0.5rem !important;
    }
    /* Khoảng cách giữa các nút */

    /* Tùy chỉnh nút hành động kiểu hiện đại */
    .btn-action-group {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    /* Nâng cấp độ đậm cho nút Hành động */
    .btn-action-group {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .btn-vibrant {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        border: 1.5px solid transparent; /* Tạo viền mờ */
        transition: all 0.2s ease-in-out;
        font-size: 1rem;
        text-decoration: none !important;
    }

        /* Hiệu ứng khi di chuột: Đậm hẳn màu và đổ bóng */
        .btn-vibrant:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.15);
            filter: brightness(0.9); /* Làm đậm màu hơn một chút khi hover */
        }

    /* Màu xanh dương - Chỉnh sửa */
    .btn-vibrant-primary {
        background-color: #e0ebff;
        color: #0061f2;
        border-color: #cfe2ff;
    }

    /* Màu xanh lá - In ấn */
    .btn-vibrant-success {
        background-color: #d1f7e8;
        color: #10b981;
        border-color: #bbf7d0;
    }

    /* Màu cam - Thu tiền */
    .btn-vibrant-warning {
        background-color: #fff3cd;
        color: #d97706;
        border-color: #fef3c7;
    }

    /* Màu đỏ - Xóa */
    .btn-vibrant-danger {
        background-color: #ffe5e5;
        color: #ef4444;
        border-color: #fecaca;
    }

    /* Badge trạng thái kiểu mới */
    .bg-success-soft {
        background-color: #d3f9d8;
        color: #2b8a3e;
        border-radius: 8px;
        padding: 6px 12px;
    }

    .bg-danger-soft {
        background-color: #fff0f0;
        color: #c92a2a;
        border-radius: 8px;
        padding: 6px 12px;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="d-flex align-items-center">
       
        <h2 class="fw-bold text-dark mb-0"><i class="fas fa-credit-card me-2 text-primary"></i>QUẢN LÝ THANH TOÁN</h2>
    </div>

    <div class="d-flex gap-2">
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
            <i class="fas fa-home me-2"></i>Quay Về Trang chủ
        </a>

        <a href="@Url.Action("Create", "HoaDon")" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus me-2"></i>Tạo hóa đơn mới
        </a>
    </div>
</div>

    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="card stat-card bg-collected p-3">
                <div class="card-body d-flex justify-content-between">
                    <div>
                        <p class="mb-1 opacity-75">TỔNG ĐÃ THU</p>
                        <h3 class="fw-bold mb-0">@String.Format("{0:N0}", ViewBag.TongDaThu) đ</h3>
                    </div>
                    <i class="fas fa-check-circle fa-3x opacity-25"></i>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card stat-card bg-pending p-3">
                <div class="card-body d-flex justify-content-between">
                    <div>
                        <p class="mb-1 opacity-75">CÒN NỢ (CHƯA THU)</p>
                        <h3 class="fw-bold mb-0">@String.Format("{0:N0}", ViewBag.ChuaThu) đ</h3>
                    </div>
                    <i class="fas fa-exclamation-circle fa-3x opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="table-card">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Mã HĐ</th>
                    <th>Sinh Viên</th>
                    <th>Phòng</th>
                    <th>Tháng/Năm</th>
                    <th>Số Tiền</th>
                    <th>Trạng Thái</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    // Xác định màu sắc dựa trên trạng thái để dùng lại cho gọn
                    var isPaid = item.TrangThai == "Đã thanh toán";
                    var statusClass = isPaid ? "text-success" : "text-danger";
                    var badgeClass = isPaid ? "bg-success-soft" : "bg-danger-soft";

                    <tr class="align-middle border-bottom">
                        <td>
                            <span class="text-secondary fw-medium">#@item.MaHoaDon</span>
                        </td>

                        <td>
                            <div class="d-flex align-items-center">
                                <div class="avatar-sm me-3 bg-light rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="fas fa-user text-primary"></i>
                                </div>
                                <div>
                                    <div class="fw-bold text-dark">
                                        @* Hiển thị Tên nếu có, không thì hiện Mã SV *@
                                        @(item.SinhVien?.HoTen ?? "SV: " + item.MaSV)
                                    </div>
                                    <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Mã: @item.MaSV</small>
                                </div>
                            </div>
                        </td>

                        <td>
                            <div class="d-flex flex-column">
                                <span class="badge bg-info-soft text-info rounded-pill px-3" style="width: fit-content;">
                                    <i class="fas fa-door-open me-1"></i>
                                    @(item.Phong != null ? item.Phong.SoPhong : "Chưa có phòng")
                                </span>
                            </div>
                        </td>

                        <td class="text-secondary">
                            <i class="far fa-calendar-alt me-1"></i> @item.Thang/@item.Nam
                        </td>

                        <td>
                            <span class="fw-bold @statusClass">
                                @String.Format("{0:N0}", item.TongTien) <small>đ</small>
                            </span>
                        </td>

                        <td>
                            <span class="badge-status-modern @badgeClass @statusClass">
                                <i class="fas @(isPaid ? "fa-check-circle" : "fa-exclamation-circle") me-1"></i>
                                @(item.TrangThai ?? "Chưa xác định")
                            </span>
                        </td>

                        <td class="text-center">
                            <div class="btn-action-group">
                                <a href="@Url.Action("Edit", "HoaDon", new { id = item.MaHoaDon })"
                                   class="btn-vibrant btn-vibrant-primary" title="Chỉnh sửa">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <button class="btn-vibrant btn-vibrant-success" title="In hóa đơn" onclick="window.print()">
                                    <i class="fas fa-print"></i>
                                </button>

                                @if (item.TrangThai != "Đã thanh toán")
                                {
                                    <a href="#" class="btn-vibrant btn-vibrant-warning" title="Xác nhận thu tiền">
                                        <i class="fas fa-hand-holding-usd"></i>
                                    </a>
                                }

                                <a href="#" class="btn-vibrant btn-vibrant-danger" title="Xóa hóa đơn"
                                   onclick="return confirm('Bạn có chắc chắn muốn xóa hóa đơn này?')">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>